

@{
    ViewData["Title"] = "Index";
}
<div class="container">

    <div class="card border-light pt-3 mb-3" style="max-width: auto;">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-grey">Employees List</h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary btn-sm ">
                        <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered" id="tbEmployee" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>NO</th>
                        <th>NIK</th>
                        <th>NAME</th>
                        <th>PHONE</th>
                        <th>BIRTH DATE</th>
                        <th>EMAIL</th>
                        <th>SALARY</th>
                        <th>GENDER</th>
                       @* <th>USERNAME</th>
                        <th>DEPARTMENT</th>
                        <th>ROLE</th>*@
                        <th>ACTION</th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/EmployeeScript.js"></script>
}
