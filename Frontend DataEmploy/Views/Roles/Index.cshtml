@{
    ViewData["Title"] = "Roles";
}

<div class="container-fluid">


    <div class="card border-light mt-5">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h2 class="">Roles List</h2>
                </div>
                <div class="col-6 text-end">
                    <a data-bs-toggle="modal" data-bs-target="#addModal" class="btn btn-primary btn-sm mt-2">
                        <i class="bi bi-plus-circle"></i> &nbsp; Add New Role
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-hover table-bordered " id="tbEmployee" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>NO</th>
                        <th>ROLE NAME</th>                        
                        <th>ACTION</th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>

</div>

<div class="modal fade" id="addModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="addModalLabel" class="modal-title text-dark">Create Data Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" id="roleIdInput" placeholder="">
                <div class="form-group">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="roleNameInput" placeholder="">
                        <label for="firstNameInput">Department Name</label>
                    </div>                   
                </div>
            </div>
            <div class="modal-footer">
                <button id="buttonSubmit" type="button" class="btn btn-primary btn-sm" onclick="Save()">Save changes</button>
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script src="~/js/DepartmentScript.js"></script>
}
